{
  "name": "youtube-transcriber",
  "version": "1.0.0",
  "description": "Microservice-based YouTube video transcription application",
  "private": true,
  "workspaces": [
    "frontend",
    "gateway",
    "services/*",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:services",
    "install:services": "npm run install:frontend && npm run install:gateway && npm run install:workflow",
    "install:frontend": "cd frontend && npm install",
    "install:gateway": "cd gateway && npm install",
    "install:workflow": "cd services/workflow-service && npm install",
    "dev": "docker-compose up --build",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:gateway": "cd gateway && npm run dev",
    "dev:workflow": "cd services/workflow-service && npm run dev",
    "build:all": "npm run build:frontend && npm run build:services",
    "build:frontend": "cd frontend && npm run build",
    "build:services": "npm run build:workflow",
    "build:workflow": "cd services/workflow-service && npm run build",
    "test": "npm run test:services",
    "test:services": "npm run test:gateway && npm run test:workflow",
    "test:gateway": "cd gateway && npm test",
    "test:workflow": "cd services/workflow-service && npm test",
    "test:watch": "npm run test -- --watch",
    "clean": "docker-compose down -v && docker system prune -f",
    "logs": "docker-compose logs -f",
    "logs:workflow": "docker-compose logs -f workflow-service"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "youtube",
    "transcription",
    "microservices",
    "langraph",
    "ollama",
    "react",
    "typescript"
  ],
  "author": "YouTube Transcriber Team",
  "license": "MIT"
}
